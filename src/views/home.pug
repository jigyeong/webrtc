doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title WebRTC Practice
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body 
        header 
            h1 WebRTC Practice
        main
            div#welcome    
                form
                    input(placeholder="room name", required, type="text")
                    button Enter room
            div#call
                div#myStream
                    video#myFace(autoplay, playsinline, width="400")
                    button#audioBtn Audio Unmute
                    button#cameraBtn Camera On
                    select#cameras
                video#peerFace(autoplay, playsinline, width="400")
        script(src="/socket.io/socket.io.js")  
        script(src="/public/js/app.js")  